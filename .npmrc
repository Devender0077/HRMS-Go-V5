# ============================================================================
# npm Configuration for HRMS Go V5
# ============================================================================
# This file ensures consistent package installation across all team members
# Compatible with npm 8, 9, 10, and 11+
# ============================================================================

# ===== DEPENDENCY RESOLUTION =====
# Use legacy peer dependency resolution (handles React 18 and other conflicts)
legacy-peer-deps=true

# Force npm to accept peer dependencies (for npm 11+)
force=false

# Strict peer dependencies disabled (prevents blocking on peer dep conflicts)
strict-peer-dependencies=false

# ===== NETWORK SETTINGS =====
# Increase timeout for slower connections
fetch-timeout=120000
fetch-retries=5
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Connection pool settings
maxsockets=15

# ===== PACKAGE LOCK =====
# Save exact versions in package-lock.json (more predictable installs)
save-exact=false
package-lock=true

# ===== REGISTRY =====
# Use npm registry (can change to private registry if needed)
registry=https://registry.npmjs.org/

# ===== ENGINE CHECKING =====
# Engine strict (enforce Node/npm version requirements)
# Set to false to allow different Node/npm versions
engine-strict=false

# ===== PROGRESS & LOGGING =====
# Progress display (cleaner output)
progress=true

# Log level (error, warn, info, verbose, silly)
loglevel=warn

# ===== AUDIT & SECURITY =====
# Audit level (info, low, moderate, high, critical)
audit-level=moderate

# ===== CACHE =====
# Cache verification
cache-min=600

# ===== OPTIONAL DEPENDENCIES =====
# Install optional dependencies
optional=true

