# HRMS Configuration
REACT_APP_NAME=HRMS Go V5
REACT_APP_VERSION=5.0.0

# API Configuration
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_BASE_URL=http://localhost:3000

# DeepL Translation API
REACT_APP_DEEPL_API_KEY=your_deepl_api_key_here
REACT_APP_DEEPL_API_URL=https://api.deepl.com/v2

# OpenAI Configuration (for AI features)
REACT_APP_OPENAI_API_KEY=your_openai_api_key_here

# Face Recognition Configuration
REACT_APP_FACE_RECOGNITION_ENABLED=true
REACT_APP_FACE_RECOGNITION_CONFIDENCE_THRESHOLD=0.6

# Storage Configuration
REACT_APP_STORAGE_DRIVER=local
REACT_APP_AWS_ACCESS_KEY_ID=
REACT_APP_AWS_SECRET_ACCESS_KEY=
REACT_APP_AWS_BUCKET=
REACT_APP_AWS_REGION=
REACT_APP_WASABI_ACCESS_KEY_ID=
REACT_APP_WASABI_SECRET_ACCESS_KEY=
REACT_APP_WASABI_BUCKET=
REACT_APP_WASABI_REGION=

# Email Configuration
REACT_APP_MAIL_DRIVER=smtp
REACT_APP_MAIL_HOST=
REACT_APP_MAIL_PORT=
REACT_APP_MAIL_USERNAME=
REACT_APP_MAIL_PASSWORD=
REACT_APP_MAIL_FROM_ADDRESS=
REACT_APP_MAIL_FROM_NAME=

# Security
REACT_APP_JWT_SECRET=hrms-secret-key-change-in-production
REACT_APP_JWT_EXPIRATION=86400

# ReCaptcha
REACT_APP_RECAPTCHA_ENABLED=false
REACT_APP_RECAPTCHA_SITE_KEY=
REACT_APP_RECAPTCHA_SECRET_KEY=

# Feature Flags
REACT_APP_ENABLE_AI_FEATURES=true
REACT_APP_ENABLE_FACE_LOGIN=true
REACT_APP_ENABLE_RECRUITMENT=true
REACT_APP_ENABLE_PAYROLL=true
REACT_APP_ENABLE_ATTENDANCE=true
REACT_APP_ENABLE_PERFORMANCE=true
REACT_APP_ENABLE_TRAINING=true
REACT_APP_ENABLE_ASSETS=true
REACT_APP_ENABLE_CONTRACTS=true
REACT_APP_ENABLE_DOCUMENTS=true
REACT_APP_ENABLE_MEETINGS=true
REACT_APP_ENABLE_CALENDAR=true

# Supported Languages
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_SUPPORTED_LANGUAGES=en,ar,da,de,es,fr,it,ja,nl,pl,ru,pt,zh,tr,he,pt-BR

