# Database Configuration (Docker)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=hrms_go_v5
DB_USER=root
DB_PASSWORD=root

# Database Sync Strategy
# Options: 'development' (safe, creates missing tables only)
#          'developmentAlter' (updates existing tables, may modify schema)
#          'fresh' (drops all tables and recreates - DESTROYS DATA!)
#          'production' (no auto-sync, use migrations)
DB_SYNC_STRATEGY=development

# Alternative: Use hrms_user instead of root
# DB_USER=hrms_user
# DB_PASSWORD=hrms_password

# Server Configuration
PORT=8000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# JWT Configuration
JWT_SECRET=hrms-go-v5-secret-key-2025
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=hrms-go-v5-refresh-secret-key-2025
JWT_REFRESH_EXPIRATION=7d

# Email Configuration (Optional - for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Pusher Configuration (Optional - for real-time features)
PUSHER_APP_ID=
PUSHER_KEY=
PUSHER_SECRET=
PUSHER_CLUSTER=
